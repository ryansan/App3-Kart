<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legg til et nytt rom"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etAddRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Navn"></EditText>

    <EditText
        android:id="@+id/etAddRoomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rombeskrivelse"></EditText>

    <EditText
        android:id="@+id/etAddRoomFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Etasje"></EditText>

    <Button
        android:id="@+id/btnAddRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Legg til"
        android:textColor="@color/common_google_signin_btn_text_dark_default"></Button>


    <Button
        android:id="@+id/btnAddRoomBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryLessDark"
        android:text="Tilbake"
        android:textColor="@color/common_google_signin_btn_text_dark_default"></Button>

    <Button
        android:id="@+id/btnCancelAddRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/back_to_map"
        android:textColor="@color/common_google_signin_btn_text_dark_default"></Button>




</LinearLayout>